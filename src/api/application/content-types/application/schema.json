{
  "kind": "collectionType",
  "collectionName": "applications",
  "info": {
    "singularName": "application",
    "pluralName": "applications",
    "displayName": "Application",
    "description": "Multi-tenant application configuration"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "unique": true,
      "minLength": 2,
      "maxLength": 100
    },
    "domain": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "subdomain": {
      "type": "string",
      "unique": true
    },
    "description": {
      "type": "text"
    },
    "logo": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "favicon": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "globalStyles": {
      "type": "json",
      "required": true,
      "default": {
        "primaryColor": "#3B82F6",
        "secondaryColor": "#10B981",
        "accentColor": "#F59E0B",
        "backgroundColor": "#FFFFFF",
        "textColor": "#1F2937",
        "fontFamily": "Inter, system-ui, sans-serif",
        "baseFontSize": 16,
        "headingFontFamily": "inherit",
        "borderRadius": 8,
        "maxWidth": 1280
      }
    },
    "pages": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::page.page",
      "mappedBy": "application"
    },
    "active": {
      "type": "boolean",
      "default": true,
      "required": true
    },
    "apiKey": {
      "type": "string",
      "private": true,
      "unique": true
    },
    "contactEmail": {
      "type": "email"
    },
    "settings": {
      "type": "json",
      "default": {
        "analytics": {
          "googleAnalyticsId": "",
          "facebookPixelId": ""
        },
        "seo": {
          "defaultMetaTitle": "",
          "defaultMetaDescription": "",
          "defaultOgImage": null
        },
        "features": {
          "enableBlog": false,
          "enableEcommerce": false,
          "enableForms": true,
          "enableSearch": false
        }
      }
    }
  }
}
